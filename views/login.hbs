<div class="container d-flex flex-column flex-lg-row justify-content-lg-between mt-5">
    <div class="container mt-3 bg-danger text-center rounded-4 py-2 me-lg-5">
        <h2 class="p-0 m-0 pb-3 pt-2 text-light">Sign In</h2>
        <!-- inner base container -->
        <div class="container mb-1 d-flex flex-column justify-content-center align-content-center mb-1 bg-body-secondary
    rounded mb-0">
            <div class="container-lg py-5 mb-2">
                <form action="{{action}}" method="post"
                      class="container col-8 col-sm-8 col-md-6 col-lg-10 col-xl-8 col-xxl-7 pt-5 pb-5 mb-lg-2">
                    <div class="py-2 ">
                        <label for="username" class="fw-bold pb-2">Username:</label>
                        <input class="form-control col-2" type="text" id="username" name="username">
                    </div>
                    <div class="py-2 mb-4">
                        <label for="password" class="fw-bold pb-2">Password:</label>
                        <input class="form-control col-2" type="password" id="password" name="password">
                    </div>

                    <!-- divider -->
                    <div class="d-flex justify-content-center align-items-center mb-4">
                        <div class="border border-1 border-body col"></div>
                        <div class="d-flex justify-content-center align-items-center col ">or</div>
                        <div class="border border-1 border-body col"></div>
                    </div>

                        <!--                    {{#each payload}}-->
                    <!--                        <p class="col-md-8 fs-4">{{@key}}: {{this}}</p>-->
                        <!--                    {{/each}}-->
                    <!--   Only show button if action is specified-->
                    <div class="container pt-1">
                        <div class="bg-image d-flex justify-content-center align-items-center flex-nowrap">
                            <a class="btn btn-block btn-social btn-google d-flex justify-content-between align-items-center hover-overlay rounded shadow-lg bg-light-subtle"
                               href="/auth/google/callback" role="button">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/2048px-Google_%22G%22_Logo.svg.png"
                                     alt="Google Logo"
                                     width="30px" height="30px"
                                     class="me-2"
                                     style="-webkit-filter: drop-shadow(1px 1px 2px #efeff0);
                                            filter: drop-shadow(1px 1px 2px #e2e2e3);"
                                />

                                <span style="-webkit-filter: drop-shadow(1px 1px 2px #efeff0);
                                            filter: drop-shadow(1px 1px 2px #efeff0);"
                                      class="ms-2 fw-bold">Sign In with Google</span>
                            </a>

                        </div>
                        <div class="mask"
                             style="background:
                                linear-gradient(45deg, hsla(168, 85%, 52%, 0.5), hsla(263, 88%, 45%, 0.5) 100% );">
                        </div>
                    </div>

                    <script>
                        function onSignIn(googleUser) {
                            var profile = googleUser.getBasicProfile();
                            console.log('ID: ' + profile.getId()); // Do not send to your backend! Use an ID token instead.
                            console.log('Name: ' + profile.getName());
                            console.log('Image URL: ' + profile.getImageUrl());
                            console.log('Email: ' + profile.getEmail()); // This is null if the 'email' scope is not present.
                        }
                    </script>

                </form>
            </div>
        </div>
    </div>
    <div class="container mt-3 bg-danger text-center rounded-4 py-2 ms-lg-5">
        <h2 class="p-0 m-0 pb-3 pt-2 text-light">Create an Account</h2>
        <!-- inner base container -->
        <div class="container mb-1 d-flex flex-column justify-content-center align-content-center mb-1 bg-body-secondary
    rounded mb-0">

            <form action="/comingsoon" method="get"
                  class="container col-8 col-sm-8 col-md-6 col-lg-10 col-xl-8 col-xxl-7 py-5 mt-lg-3 mt-xl-4 mb-lg-5 mb-xl-4">
                <div class="py-2 ">
                    <label for="acctUsername" class="fw-bold pb-2">Username:</label>
                    <input class="form-control" type="text" id="acctUsername" name="acctUsername">
                </div>
                <div class="py-2 ">
                    <label for="acctEmail" class="fw-bold pb-2">Email:</label>
                    <input class="form-control" type="email" id="acctEmail" name="acctEmail">
                </div>
                <div class="py-2 mb-0">
                    <label for="acctPassword" class="fw-bold pb-2">Password:</label>
                    <input class="form-control" type="password" id="acctPassword" name="acctPassword">
                </div>
                <button type="submit" class="btn btn-success mt-5 mb-xl-3">Create Account</button>
            </form>

        </div>
    </div>
</div>


