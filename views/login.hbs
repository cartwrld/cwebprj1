<div class="container d-flex flex-column flex-lg-row justify-content-lg-between mt-5">
    <div class="container mt-3 bg-danger text-center rounded-4 py-2 me-lg-5">
        <h2 class="p-0 m-0 pb-3 pt-2 text-light">Sign In</h2>
        <!-- inner base container -->
        <div class="container mb-1 d-flex flex-column justify-content-center align-content-center mb-1 bg-body-secondary
    rounded mb-0">
            <div class="container-lg py-5 mb-2">
                <form class="container col-8 col-sm-8 col-md-6 col-lg-10 col-xl-8 col-xxl-7 pt-5 pb-5 mb-lg-2">
                    <div class="py-2 ">
                        <label for="username" class="fw-bold pb-2">Username:</label>
                        <input class="form-control col-2" type="text" id="username" name="username">
                    </div>
                    <div class="py-2 mb-5">
                        <label for="password" class="fw-bold pb-2">Password:</label>
                        <input class="form-control col-2" type="password" id="password" name="password">
                    </div>
                    {{#each payload}}
                        <p class="col-md-8 fs-4">{{@key}}: {{this}}</p>
                    {{/each}}
                    <!--   Only show button if action is specified-->
                    {{#if action}}
                        <form action="{{action}}" method="post">
                            <!--        pass the JWT as a value in a hidden input-->
                            <input type="hidden" name="access_token" value="{{token}}"/>
                            <button type="submit" class="btn btn-success mt-0">Login</button>
                        </form>
                    {{/if}}

                </form>
            </div>
        </div>
    </div>
    <div class="container mt-3 bg-danger text-center rounded-4 py-2 ms-lg-5">
        <h2 class="p-0 m-0 pb-3 pt-2 text-light">Create an Account</h2>
        <!-- inner base container -->
        <div class="container mb-1 d-flex flex-column justify-content-center align-content-center mb-1 bg-body-secondary
    rounded mb-0">

            <form class="container col-8 col-sm-8 col-md-6 col-lg-10 col-xl-8 col-xxl-7 py-5 mb-lg-2 mb-xl-2">
                <div class="py-2 ">
                    <label for="acctUsername" class="fw-bold pb-2">Username:</label>
                    <input class="form-control" type="text" id="acctUsername" name="acctUsername">
                </div>
                <div class="py-3 ">
                    <label for="acctEmail" class="fw-bold pb-2">Email:</label>
                    <input class="form-control" type="email" id="acctEmail" name="acctEmail">
                </div>
                <div class="py-2">
                    <label for="acctPassword" class="fw-bold pb-2">Password:</label>
                    <input class="form-control" type="password" id="acctPassword" name="acctPassword">
                </div>
                <button type="submit" class="btn btn-success mt-5">Create Account</button>
            </form>

        </div>
    </div>
</div>


