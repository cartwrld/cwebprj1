<div class="container d-flex flex-column flex-lg-row justify-content-lg-between mt-5">
    <div class="container mt-3 bg-danger text-center rounded-4 py-2 mb-5">
        <h2 class="p-0 m-0 pb-3 pt-2 text-light">Recent Activity</h2>
        <!-- inner base container -->
        <div class="container-fluid mb-1 d-flex flex-column justify-content-around align-content-center mb-1 bg-body-secondary
    rounded mb-0 px-xxl-5">
            {{#if isEmpty}}
                <div class="d-flex justify-content-around align-items-center flex-wrap my-5">
                    <div class="d-flex justify-content-center bg-primary shadow-lg align-items-center rounded col-10 col-lg-5 col-xxl-5 mb-4 p-1">
                        <img src="https://i.imgur.com/1cfSpBl.png"
                             class="rounded-1 col-12"
                             alt="AI Pokemon 1" width="256px"/>
                    </div>
                    <div class="d-flex justify-content-center bg-success shadow-lg align-items-center rounded col-10 col-lg-5 col-xxl-5 mb-4 p-1">
                        <img src="https://i.imgur.com/yhkGdGj.png"
                             class="rounded-1 col-12"
                             alt="AI Pokemon 1" width="256px"/>
                    </div>
                    <div class="d-flex justify-content-center bg-info shadow-lg align-items-center rounded col-10 col-lg-5 col-xxl-5 mb-4 p-1">
                        <img src="https://i.imgur.com/CtkIAQO.png"
                             class="rounded-1 col-12"
                             alt="AI Pokemon 1" width="256px"/>
                    </div>
                    <div class="d-flex justify-content-center bg-dark shadow-lg align-items-center rounded col-10 col-lg-5 col-xxl-5 mb-4 p-1">
                        <img src="https://i.imgur.com/nuwmvhQ.png"
                             class="rounded-1 col-12"
                             alt="AI Pokemon 1" width="256px"/>
                    </div>
                    <div class="d-flex justify-content-center bg-danger shadow-lg align-items-center rounded col-10 col-lg-5 col-xxl-5 mb-4 p-1">
                        <img src="https://i.imgur.com/VTJDWff.png"
                             class="rounded-1 col-12"
                             alt="AI Pokemon 1" width="256px"/>
                    </div>
                    <div class="d-flex justify-content-center bg-dark-subtle shadow-lg align-items-center rounded col-10 col-lg-5 col-xxl-5 mb-4 p-1">
                        <img src="https://i.imgur.com/tlcWcTX.png"
                             class="rounded-1 col-12"
                             alt="AI Pokemon 1" width="256px"/>
                    </div>
                    <div class="d-flex justify-content-center bg-warning shadow-lg align-items-center rounded col-10 col-lg-5 col-xxl-5 mb-4 p-1">
                        <img src="https://i.imgur.com/mtcFDSB.png"
                             class="rounded-1 col-12"
                             alt="AI Pokemon 1" width="256px"/>
                    </div>
                    <div class="d-flex justify-content-center bg-primary-subtle shadow-lg align-items-center rounded col-10 col-lg-5 col-xxl-5 mb-4 p-1">
                        <img src="https://i.imgur.com/JXTPIbg.png"
                             class="rounded-1 col-12"
                             alt="AI Pokemon 1" width="256px"/>
                    </div>

                </div>







            {{else}}
                <div class="pt-4 d-flex flex-column justify-content-center px-xxl-5">
                    {{#each sessActions}}
                        <div class="mb-4 d-flex flex-wrap justify-content-center align-items-center p-4 bg-light bg-gradient rounded-5">
                            <div class="d-flex align-items-center p-3 rounded-5 border border-2 border-danger bg-danger bg-gradient">
                                <div class="p-3 px-4 rounded-circle bg-light bg-gradient bg-opacity-10 border border-2 border-danger">
                                    <span class="my-5 fw-bold text-light fs-5">{{@index}}</span>
                                </div>
                            </div>
                            <div class="mx-5">
                                <p class="m-0 fw-bold" id="recActItem1">{{action}} on {{page}} at {{time}}
                                    on {{date}}</p>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{/if}}
        </div>
    </div>
</div>
