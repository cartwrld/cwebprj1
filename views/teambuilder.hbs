<!-- base container -->
<div class="container-fluid mt-3 container-xxl bg-danger text-center rounded-4 py-2">
    <h2 class="p-0 m-0 pb-3 pt-1 text-light">Select your Pokemon</h2>
    <!-- inner base container -->
    <div class="container-fluid  mb-2 bg-light bg-dark-subtle bg-gradient d-flex flex-column justify-content-around align-content-center mb-1 bg-light
    rounded-top-3 mb-0">
        <!-- heading + form container -->
        <div class="d-flex flex-column py-4">
            <!-- filters heading container -->
            <div class=" p-0 m-0 ">
                <h4 class="p-0 m-0 pb-2 col-12 text-start">Filters</h4>
            </div>
            <!-- outer criteria form container -->
            <div class="p-0 m-0">
                <form>
                    <!-- base filters form controls container -->
                    <div class="container d-flex flex-column flex-md-row col-md-12 justify-content-center align-items-center">
                        <!-- name/ID + generation container -->
                        <!-- name/ID search input container -->
                        <div class="container col-12 col-lg-6 col-md-6">
                            <label for="searchName">Name or ID:</label>
                            <input class="form-control" type="text" id="searchName"
                                   placeholder="Search by Pokemon name or ID ">
                        </div>
                        <!-- generation select container -->


                        <!-- type1 + type2 selects container -->
                        <div class="container d-flex flex-column my-3 col-lg-5 col-md-5 col-12">
                            <!-- type1 select container -->
                            <div class="container">
                                <label for="type1Select">Type 1:</label>
                                <select class="form-select" id="type1Select">
                                    <option value="" selected></option>
                                    <option value="Normal">Normal</option>
                                    <option value="Fire">Fire</option>
                                    <option value="Water">Water</option>
                                    <option value="Grass">Grass</option>
                                    <option value="Electric">Electric</option>
                                    <option value="Ice">Ice</option>
                                    <option value="Fighting">Fighting</option>
                                    <option value="Poison">Poison</option>
                                    <option value="Ground">Ground</option>
                                    <option value="Flying">Flying</option>
                                    <option value="Psychic">Psychic</option>
                                    <option value="Bug">Bug</option>
                                    <option value="Rock">Rock</option>
                                    <option value="Ghost">Ghost</option>
                                    <option value="Dragon">Dragon</option>
                                    <option value="Dark">Dark</option>
                                    <option value="Steel">Steel</option>
                                    <option value="Fairy">Fairy</option>
                                </select>
                            </div>
                            <!-- type2 select container -->
                            <div class="container">
                                <label for="type2Select">Type 2:</label>
                                <select class="form-select" id="type2Select">
                                    <option value="" selected></option>
                                    <option value="Normal">Normal</option>
                                    <option value="Fire">Fire</option>
                                    <option value="Water">Water</option>
                                    <option value="Grass">Grass</option>
                                    <option value="Electric">Electric</option>
                                    <option value="Ice">Ice</option>
                                    <option value="Fighting">Fighting</option>
                                    <option value="Poison">Poison</option>
                                    <option value="Ground">Ground</option>
                                    <option value="Flying">Flying</option>
                                    <option value="Psychic">Psychic</option>
                                    <option value="Bug">Bug</option>
                                    <option value="Rock">Rock</option>
                                    <option value="Ghost">Ghost</option>
                                    <option value="Dragon">Dragon</option>
                                    <option value="Dark">Dark</option>
                                    <option value="Steel">Steel</option>
                                    <option value="Fairy">Fairy</option>
                                </select>
                            </div>
                        </div>
                        <div class="container flex-shrink-1 col-2">
                            <label for="genSelect">Generation:</label>
                            <select class="form-select" id="genSelect">
                                <option value="" selected></option>
                                <option value="gen1">1</option>
                                <option value="gen2">2</option>
                                <option value="gen3">3</option>
                                <option value="gen4">4</option>
                                <option value="gen5">5</option>
                                <option value="gen6">6</option>
                                <option value="gen7">7</option>
                                <option value="gen8">8</option>
                                <option value="gen9">9</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <!-- apply filters button container -->
            <div class="container-fluid col-2 py-3 d-flex justify-content-center">
                <input class="btn btn-success" type="button" value="Apply">
            </div>
        </div>
    </div>
    <div class="container-fluid mt-0 d-flex flex-wrap bg-body-secondary">
        <div class="container-fluid d-flex flex-wrap justify-content-center ">
            {{#each poke20Display}}
                <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-6 col-sm-6
                    d-flex flex-column justify-content-center ">
                    {{>teamcardoption}}
                    <label class="pb-3">
                        <input type="checkbox" class="teamOption">
                        Add to team
                    </label>
                </div>
            {{/each}}
        </div>
    </div>

</div>


