<div class="container-fluid">

    <div class="d-flex flex-column justify-content-center align-items-center pt-5 pb-4">
        <h1>Welcome to PowerPoke!</h1>
        <div class="d-flex justify-content-around flex-nowrap">
            <input class="btn btn-outline-danger mx-2" type="button" value="Build a Pokemon" id="buildPkmBtn"/>
            <input class="btn btn-outline-danger mx-2" type="button" value="Build a Team" id="buildTeamBtn"/>
        </div>
    </div>

    <div class="p-3">

        <div class="container-fluid container-xxl rounded-3 bg-danger d-flex flex-column justify-content-center align-items-center my-3">
            <div class="d-flex bg-light-subtle rounded-4 flex-wrap justify-content-around mx-4 my-5 p-4 ">
            <div class="container-fluid bg-light m-0 d-flex align-items-center">
                <h2 class="p-0 m-0">Popular Pokemon</h2>
            </div>
                {{#each cards}}
                    {{>pokecard}}
                {{/each}}
            </div>

        </div>
    </div>
</div>
