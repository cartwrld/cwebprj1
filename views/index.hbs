<div class="container-fluid">

    <div class="d-flex flex-column justify-content-center align-items-center pt-5 pb-4">
        <h1>Welcome to PowerPoke!</h1>
        <div class="d-flex justify-content-around flex-nowrap pt-4 pb-0">
            <a href="/pokebuilder"><input class="btn btn-outline-danger mx-2" type="button" value="Build a Pokemon"/></a>
            <a href="/teambuilder"><input class="btn btn-outline-danger mx-2" type="button" value="Build a Team"/></a>
        </div>
    </div>

    <div class="p-3">
        <!-- base container -->
        <div class="container-fluid mt-3 container-xxl bg-danger text-center rounded-4 py-2">
            <h2 class="p-0 m-0 pb-3 pt-2 text-light">Popular Pokemon</h2>
            <!-- inner base container -->
            <div class="container-fluid mb-1 d-flex flex-column justify-content-around align-content-center mb-1 bg-body-secondary
    rounded mb-0">

                <div class="container py-2 d-flex flex-wrap justify-content-center">
                {{#each cards}}
                    <div class="p-0 col-12 col-sm-6 col-md-4 col-lg-4 col-xl-3 col-xxl-3">
                        {{>pokecard}}
                    </div>
                {{/each}}
            </div>
            </div>

        </div>
    </div>
</div>
